<%= render 'shared/header'%>
<div class="container">
  <h3>Sign up</h3>
  <div class="width60 center">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ class:'flex-column gap3'}) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'field' %>
      </div>

      <div class="field">
        <%= f.label :pseudo %><br />
        <%= f.text_field :pseudo, autocomplete: "pseudo" %>
        <% if flash[:error].present?%>
          <p class="error"><%= flash[:error]%></p>
        <%end%>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
        <p>already have an account ? </p>
        <%= render "users/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
